@model InsurenceWebApp.Models.Insurance

@{
    ViewData["Title"] = "Sjednání pojištění";
}

<h1 class="text-primary text-lg-center mt-4 pt-4 mb-4 pb-4 border-top border-bottom border-2 border-dark bg-primary bg-gradient bg-opacity-10">Sjednání pojištění</h1>
<h2 class="text-primary pt-3 mb-3 pb-3 border-bottom border-1 border-dark ">Smuvní podmínky</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <div class="row g-3 align-items-center">
                    <div class="col-4">
                        <label asp-for="ContractType" class="control-label">Typ smlouvy</label>
                    </div>
                    <div class="col-auto ">
                        <input asp-for="ContractType" class="form-control" value="Cestovní Pojištění" disabled/>
                    </div>
                    <div class="col-auto ">
                        <span asp-validation-for="ContractType" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mb-3">
                <div class="row g-3 align-items-center">
                    <div class="col-4">
                        <label asp-for="ContractNumber" class="control-label">Číslo pojistné smlouvy</label>
                    </div>
                    <div class="col-auto ">
                        <input asp-for="ContractNumber" class="form-control" value="2023001" disabled />
                    </div>
                    <div class="col-auto ">
                        <span asp-validation-for="ContractNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mb-3">
                <div class="row g-3 align-items-center">
                    <div class="col-4">
                        <label asp-for="MonthPayment" class="control-label">Měsíční platby</label>
                    </div>
                    <div class="col-auto ">
                        <input asp-for="MonthPayment" class="form-control" />
                    </div>
                    <div class="col-auto ">
                        <span asp-validation-for="MonthPayment" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mb-3">
                <div class="row g-3 align-items-center">
                    <div class="col-4">
                        <label asp-for="Principal" class="control-label">Jistina</label>
                    </div>
                    <div class="col-auto ">
                        <input asp-for="Principal" class="form-control" />
                    </div>
                    <div class="col-auto ">
                        <span asp-validation-for="Principal" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mb-3">
                <div class="row g-3 align-items-center">
                    <div class="col-4">
                        <label asp-for="Validity" class="control-label">Platnost pojištění</label>
                    </div>
                    <div class="col-auto ">
                        <input asp-for="Validity" class="form-control" />
                    </div>
                    <div class="col-auto ">
                        <span asp-validation-for="Validity" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
