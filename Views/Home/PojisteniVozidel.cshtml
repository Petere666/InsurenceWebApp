@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Pjištění vozidel";
}

<div class=" ">
    <h1 class="text-primary text-lg-center mt-4 pt-4 mb-4 pb-4 border-top border-bottom border-2 border-dark bg-primary bg-gradient bg-opacity-10">Pojištění vozidel</h1>
    <div class="col-sm-12 mb-3 mb-sm-0 pb-3">
        <div class="card h-100 w-100 ">
            <div class="card-body">
                <h4 class="card-title border-bottom border-3 border-primary">pojištění vozidel</h4>
                <ul class="list-unstyled">
                    <li><h5>Proč si sjednat povinné ručení a havarijní pojištění?</h5></li>
                    <ul>
                        <li>Garantujeme vyplacení pořizovací ceny vozidla po dobu 5 let u vozidel do 2 let stáří. </li>
                        <li>Kryjeme škody na vašem vozidle.</li>
                        <li>Asistenční služby pro případ nehody i poruchy vozidla se sčítají.</li>
                        <li>Pojištění osobních věcí řidiče i posádky v ceně. </li>
                    </ul>

                </ul>
            </div>
        </div>
    </div>
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="card text-center mt-5 mb-5 ">
            <div class="card-header fs-4">
                Sjednání pojištění vozidla
            </div>
            <div class="card-body">
                <h5 class="card-title"></h5>
                <a class="btn btn-outline-primary mb-1 mb-sm-0 mt-2 mt-sm-0" role="button" asp-area="" asp-controller="Insurances" asp-action="Create">Sjednat pojištění</a>
            </div>
            <div class="card-footer text-body-secondary">
                Těšíme se na Vás.
            </div>
        </div>
    }
    else
    {

        <div class="card text-center mt-5 mb-5 ">
            <div class="card-header fs-4">
                Pro sjednání pojištění se prosím přihlašte nebo zaregistrujte
            </div>
            <div class="card-body">
                <h5 class="card-title"></h5>
                <a class="btn btn-outline-primary mb-1 mb-sm-0 mt-2 mt-sm-0" role="button" asp-area="" asp-controller="Account" asp-action="Register">Registrovat</a>
                <a class="btn btn-outline-primary mb-1 mb-sm-0 mt-2 mt-sm-0" role="button" asp-area="" asp-controller="Account" asp-action="Login">Přihlásit</a>

            </div>
            <div class="card-footer text-body-secondary">
                Těšíme se na Vás.
            </div>
        </div>

    }
</div>