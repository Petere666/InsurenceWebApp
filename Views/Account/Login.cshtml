@model LoginViewModel

@{
    ViewData["Title"] = "Přihlášení";
}

<h1 class="text-primary text-lg-center mt-4 pt-4 mb-4 pb-4 border-top border-bottom border-2 border-dark bg-primary bg-gradient bg-opacity-10">Prihlašení uživatele</h1>

<div class="row">
    <div class="col-4">
        <form class="d-flex flex-column gap-2" asp-route-returnUrl="@ViewData["ReturnUrl"]">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Váš@email.cz" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input">
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-primary mb-1 mb-sm-0 mt-2 mt-sm-0">Přihlásit se</button>
            </div>
            <a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]">Registrace</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

