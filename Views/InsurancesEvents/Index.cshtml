@model IEnumerable<InsurenceWebApp.Models.InsurancesEvents>

@{
    ViewData["Title"] = "Pjistné události";
}

<h1 class="text-primary text-lg-center mt-4 pt-4 mb-4 pb-4 border-top border-bottom border-2 border-dark bg-primary bg-gradient bg-opacity-10">Soupis pojistných událostí</h1>


<table class="table table-hover border-3 border-top border-start border-bottom border-end">
    <thead>
        <tr>
            <th scope="col" class="col-2 border-1">
                <h5 class="text-primary">Číslo pojistné smlouvy</h5> @*@Html.DisplayNameFor(model => model.ContractNumber)*@
            </th>
            <th scope="col" class="col-2 border-1">
                <h5 class="text-primary">Číslo pojistné události</h5> @*@Html.DisplayNameFor(model => model.EventNumber)*@
            </th>
            <th scope="col" class="col-2 border-1">
                <h5 class="text-primary">Velikost Škody</h5> @*@Html.DisplayNameFor(model => model.DamageAmount)*@
            </th>
            <th scope="col" class="col-2 border-1">
                <h5 class="text-primary">Popis škodné události</h5> @*@Html.DisplayNameFor(model => model.DamageDescription)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td scope="row" class="border-1">
                @Html.DisplayFor(modelItem => item.ContractNumber)
            </td>
            <td class="border-1">
                @Html.DisplayFor(modelItem => item.EventNumber)
            </td>
            <td class="border-1">
                @Html.DisplayFor(modelItem => item.DamageAmount)
            </td>
            <td class="border-1">
                @Html.DisplayFor(modelItem => item.DamageDescription)
            </td>
            <td class="col-6">
                <a class="btn btn-primary me-3 ms-3" asp-action="Edit" asp-route-id="@item.Id">Upravit událost</a>
                <a class="btn btn-primary me-3" asp-action="Details" asp-route-id="@item.Id">Detaily</a>
                <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Vymazat</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="ClientZone">Zpět</a>